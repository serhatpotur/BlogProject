@model ArticleDto
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="blog-posts">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="all-blog-posts">
                    <div class="row">

                        <div class="col-lg-12">
                            <div class="blog-post">
                                <div class="blog-thumb">
                                    <img src="~/images/@Model.Image.FileName" alt="">
                                </div>
                                <div class="down-content">
                                    @* <span>Lifestyle</span> *@
                                    <h4>@Model.Title</h4>
                                    <ul class="post-info">
                                        <li><a href="#">@Model.CreatedBy</a></li>
                                        <li><a href="#">@Model.CreatedDate.ToShortDateString()</a></li>
                                        <li> <i class="fa-solid fa-eye"></i> @Model.ViewCount</li>
                                    </ul>
                                    <p style="border-bottom:0px;">
                                        @Model.Content
                                    </p>
                                    
                                </div>
                            </div>
                        </div>



                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="sidebar">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="sidebar-item search">
                                <form id="search_form" asp-controller="Home" asp-action="Index" method="get">
                                    <input type="text" name="keyword" class="searchText" placeholder="Aranacak Kelimeyi Giriniz" autocomplete="on">
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            @await Component.InvokeAsync("RecentPost")

                        </div>

                        @await Component.InvokeAsync("Categories")

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

