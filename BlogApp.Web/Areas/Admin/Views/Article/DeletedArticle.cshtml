@model List<GetListArticleDto>
@{
    ViewData["Title"] = "DeletedArticle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Silinmiş Ögeler/</span> Makaleler</h4>

<div class="card">
  
    <div class="table-responsive text-nowrap m-4">
        <table class="table" id="articlesTable">
            <thead>
                <tr>
                    <th>Başlık</th>
                    <th>Kategori</th>
                    <th>Silinme Tarihi</th>
                    <th>Silen</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Category.Name</td>
                        <td>@item.DeletedDate</td>
                        <td>@item.DeletedBy</td>
                        <td>@(item.isDeleted ? "Pasif" : "Aktif")</td>
                        <td>
                           @*  <a class="btn btn-danger btn-sm" data-id="@item.Id" asp-route-id="@item.Id" asp-area="Admin" asp-controller="Article" asp-action="Update">
                                <i class="bx bx-edit"></i>
                            </a> *@
                            <a class="btn btn-danger btn-sm" data-id="@item.Id" asp-route-id="@item.Id" asp-area="Admin" asp-controller="Article" asp-action="UndoDelete">
                                <i class='bx bx-undo'></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/articleIndex.js" type="application/ecmascript"></script>
}

