@model AddCategoryDto
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Kategori Yönetimi /</span> Kategori Ekle</h4>

<div class="col-md-12">
    <div class="card mb-4">
        <form asp-area="Admin" asp-controller="Category" asp-action="Add" method="post">
            <div class="card-body">
                
                <div class="form-group">
                    <label asp-for="Name" for="defaultFormControlInput" class="form-label">Kategori Adı</label>
                    <input type="text"
                           asp-for="Name"
                           class="form-control mb-3"
                           id="defaultFormControlInput"
                           aria-describedby="defaultFormControlHelp" />
                    <span asp-validation-for="Name" class="text-danger"></span>


                </div>
               

                <div class="form-group row">
                    <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn  btn-danger btn-lg col-md-6">Vazgeç</a>
                    <button type="submit" class="btn  btn-success btn-lg col-md-6">Kaydet</button>

                </div>

            </div>
        </form>
    </div>
</div>



